{
  "name": "postcss-demo",
  "version": "1.0.0",
  "description": "Use PostCSS as a lightweight alternative to Sass",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "css:basic": "postcss src/scss/main.scss --output build/css/main.css --env development --config ./config/ --verbose",
    "css:dev": "postcss src/scss/main.scss --output build/css/main.css --env development --verbose",
    "css:watch": "postcss src/scss/main.scss --output build/css/main.css --env development --verbose --watch",
    "css:build": "postcss src/scss/main.scss --output build/css/main.css --env production --verbose"
  },
  "browserslist": [
    "> 2%"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/craigbuckler/postcss-demo.git"
  },
  "keywords": [
    "css",
    "postcss",
    "sass"
  ],
  "author": "Craig Buckler",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/craigbuckler/postcss-demo/issues"
  },
  "homepage": "https://github.com/craigbuckler/postcss-demo#readme",
  "devDependencies": {
    "autoprefixer": "^10.2.4",
    "cssnano": "^4.1.10",
    "postcss": "^8.2.5",
    "postcss-advanced-variables": "^3.0.1",
    "postcss-assets": "^5.0.0",
    "postcss-cli": "^8.3.1",
    "postcss-map-get": "^0.2.9",
    "postcss-nested": "^5.0.3",
    "postcss-scss": "^3.0.4",
    "postcss-sort-media-queries": "^3.3.3"
  }
}
